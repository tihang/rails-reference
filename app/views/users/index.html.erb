<h1 class="mx-auto text-center" style="width: 300px;">Login/ Register</h1>

<div class="row">
    <div id="registration" class="col-md-6">
        <h1 class="mx-auto text-center">Register</h1>

        <%# REGISTER FORM %>
        <%= form_with model: @user, validate: true do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <%= f.submit "Register", class: "btn btn-primary" %>
        <% end %>
    </div>

    <div id="login" class="col-md-6">
        <h1 class="mx-auto text-center">Login</h1>
        <%# LOGIN FORM %> 
        <%= form_with url: sessions_path do |f| %>
            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
            </div>

            <%= f.submit "Login", class: "btn btn-primary" %>
        <% end %>
        
        <% if flash[:errors] %>
            <div class="row mt-4 mx-4">
                <div class="p-3 mb-2 bg-danger text-white"><%= flash[:errors] %></div>
            </div>
        <% end %>
    </div>
</div>